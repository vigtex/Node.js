    <h3>Respostas</h3>
    <!--listando as respostas-->
    <%respostas.forEach(resposta =>{%>
    </br>
        <div class="card">
            <div class="card-body">
                <p><%=resposta.corpo%></p>
            </div>
        </div>
        
    <%})%>
    </div>
    
</div>

