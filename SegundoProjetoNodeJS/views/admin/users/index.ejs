<%- include ('../../partials/_navbar.ejs') %>
<body>
    

    <div class="container">
    <hr>
    <div class="card">
    <div class="card-header">
        <h2>Usuários</h2>
        <a href="/admin/users/create" class="btn btn-primary">Criar novo usuário</a>
    </div>
    <div class="card-body">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>E mail</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                <% users.forEach(user => { %>
                    <tr>
                        <td><%=user.id%></td>
                        <td><%=user.email%></td>
                        <td><button>x</button></td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
        
    </div>
    </div>
    </div>
    
</body>
